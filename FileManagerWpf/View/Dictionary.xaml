<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">

    <SolidColorBrush x:Key="MainColor" Color="ForestGreen" />
    <SolidColorBrush x:Key="DirColor" Color="LightGoldenrodYellow" />
    <SolidColorBrush x:Key="FileColor" Color="LightCyan" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="ForestGreen"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="ForestGreen"/>
    
    <Style x:Key="PanelButton" TargetType="Button">
        <Setter Property="Margin" Value="3" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Padding" Value="0 2" />

        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="Background" Value="LightGreen"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PanelIcon" TargetType="fa:FontAwesome">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{StaticResource MainColor}" />
    </Style>


</ResourceDictionary>